<div class="rehearsals_title">
	You have <span class="num"><%= @feedbacks.size.to_s %></span> Feedback<%= @feedbacks.size > 1 ? 's' : '' %> for rehearsal in Lesson :: <%= link_to @rehearsal.lesson.title, course_topic_lesson_path(@rehearsal.course, @rehearsal.topic, @rehearsal.lesson) %>
</div>

<hr>

<div class="box_sep">
	<div class="title">Feedback for <%= @rehearsal.lesson.title %></div>
	<div class="body">
		<% @feedbacks.each do |feedback| %>
			<% if !feedback.viewed_by_user %>
				<span style="font-weight:bold; font-family:'gotham';">
			<% end %>

			<%= link_to (feedback.user.role.capitalize+' '+feedback.user.first_name+' '+feedback.user.last_name+' left you a feedback'), feedback_path(feedback) %>
			
			<% if !feedback.viewed_by_user %>
				</span><div class="reddot"></div>
			<% end %>
			<br>
		<% end %>
	</div>
</div>