$('.application_approved').bind('ajax:success', function() {
  $(this).closest('li').fadeOut();
  $('.shadebox').fadeOut(500);
  location.reload();
  <% flash.each do |type, message| %>
  $(".group_registration_flash").append("<%= j content_tag :p, message.html_safe, {class: "flash notice text-center", id: "notice_wrapper"} %>").delay(3000).fadeOut("slow");
  <% end %>
});



