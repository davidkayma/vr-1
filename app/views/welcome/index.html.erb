							var tagSplit = item.tags.split(',')
							var hasTags = true;
						}else{
							var hasTags = false;
						}

						// console.log(tagSplit);
						// console.log(termSplit);
						
						if(hasTags){
							var ta = 0;
							var te = 0;
							var foundTags = 'na';

							do{

								if($.inArray(termSplit[te], tagSplit) !== -1){
									$('.search_result').append(item.title);
									foundTags = true;
								}else{
									ta+=1;
									if( ta === tagSplit.length ){
										foundTags = false;
									}
								}

							}while(ta < tagSplit.length && foundTags === 'na');
						}
						// console.log(foundTags);
