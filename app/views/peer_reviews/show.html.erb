<div class="wrapper" style="margin:30px auto 40px;">

    <style>
        .col2{
            width:50%;
            float: left;
        }
        .prompt_video{
            width: 95%;
        }
    </style>

    <div class="half">
        <h3>Lesson: <%= link_to @lesson.title, @lesson.path %> </h3>
        <h5>course: <%= link_to @course.title, course_path(@course) %> </h5>
    </div>

    <div class="half">
        <a href="<%=@lesson.path%>">
            <button class="big_btn" style="float:right !important; margin-top:30px;">
                Re-Record Rehearsal
            </button>
        </a>
    </div>

    <hr>
    <div class="col2">
        <div class="js-player prompt_video">
            Your Rehearsal:
            <br><br>
		
			<div class="video_black_bg media_wrapper">
				<div class="ziggeo">
					<%= render './shared/ziggeoplayer', this_class: "rehearsal", token:@rehearsal.video_token %>
				</div>
			</div>
			<div class="lesson_script prompt_script">
				<%= simple_format(@rehearsal.script) %>
			</div>
			<%= render './lessons/scriptcontrol', thisclass: 'prompt' %>
		</div>
    </div>

    <div class="col2">
		<div class="js-player prompt_video">
            Peer Review From <%= @request.person_name %>:
            <br><br>
		
			<div class="video_black_bg media_wrapper">
				<div class="ziggeo">
					<%= render './shared/ziggeoplayer', this_class: "prompt", token:@review.video_token %>
				</div>
			</div>
			<div class=" ">
                <h4>Notes:</h4>
                <hr>
				<%= simple_format(@review.notes) %>
			</div>
		</div>
    </div>
    
    
    
</div>