<% tparams = ["interview", "customerservice", "wellness", "pronunciation", 'hospitality'] %>
<% t = params[:t] %>
<div class="full_top_img" style="background-image:url('<%=image%>/<%= t ? t.downcase : "frame_home_1" %>.jpg'); height:85%;">
  <div class="register_header">
    <div class="content">
      
      <div class="register_text">
        <% if t && tparams.include?(t.downcase) %>
          <h2>
            <% case t.downcase %>
              <% when tparams[0] %>
                Interview Skills Training
              <% when tparams[1] %>
                Customer Service Training
              <% when tparams[2] %>
                Wellness Training
              <% when tparams[3] %>
                Pronunciation Training
              <% when tparams[4] %>
                Hospitality Training
              <% else %>
            <% end %>
          </h2>
          <hr style="width:200px;">
        <%end%>
        Review . Rehearse . Transform
        <br>
        <%= render params[:t].downcase rescue render "default" %>
        
      </div>

      <div class="register">
        <h2>Register</h2>
        
        <hr style="border-top:0.5px dotted #999; opacity:0.3; margin:20px 0; max-width:400px; min-width:50%;">
        <div class='form_err'></div>
        <div class="form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true, remote: true) do |f| %>
            <%= devise_error_messages! %>

            <!-- <div class="register_label">User Information</div> -->
            <%= f.text_field :first_name, class:'firstname name clearform', autofocus: true, placeholder:'First Name', value:( Rails.env.development? 'Demo' ? : params[:fname])%>
            <%= f.text_field :last_name, class:'lastname name clearform', placeholder:'Last Name', value:( Rails.env.development? ? 'User' : params[:lname] )%>
            <%= f.text_field :username, class:'username clearform', placeholder:'Create Username', value:('user1' if Rails.env.development?)%><br>
            <%= f.email_field :email, class:'email clearform', autofocus: true, placeholder:'Email', value:(Rails.env.development? 'user1@email.com' ? : params[:email])%><br><br>


            <!-- <div class="register_label">Password -->
              <!-- <% if @minimum_password_length %> -->
                <!-- <span style="font-size:10px;">(<%= @minimum_password_length %> characters minimum)</span> -->
              <!-- <% end %>: -->
            <!-- </div> -->
            <%= f.password_field :password, class:'pass clearform', autocomplete: "off", placeholder:'Password (6 characters or more)', value:('test123' if Rails.env.development?) %><br>
            <%= f.password_field :password_confirmation, class:'passComf clearform', autocomplete: "off", placeholder:'Confirm Password', value:('test123' if Rails.env.development?) %><br><br>
            
            <hr>

            <h5 class="bold">Access Code</h5>
            <%= f.text_field :access_code, class:'coupon_code name clearform', placeholder:'Access Code', value:params[:access_code]%>
            <br>

            <!-- <div class="register_label">Ethnicity</div>
            <%= f.select :race, ([["Hispanic or Latino", "Hispanic or Latino"], ["American Indian or Alaska Native", "American Indian or Alaska Native"], ["Asian", "Asian"], ["Black or African American", "Black or African American"], ["Native Hawaiian or Pacific Islander", "Native Hawaiian or Pacific Islander"], ["White", "White"], ["Multiple races or ethnicities", "Multiple races or ethnicities"], ["Prefer not to answer", "Prefer not to answer"], ["Other", "Other"]]) %>
            <br>
            this line is broken therefore is not in production
            <div class="register_label">Date of birth</div>
            <%= f.date_field :age, placeholder:'Age'%><br><br> -->
            
           
            <input type="checkbox" class="termsServices" id="termsServices" name="terms_services" style="width:20px; float:left;">
            
            <font color="#333" style="position:reltive; top:6px; font-size:14px;">I have read the <a href="#" data-toggle="modal" data-target="#myModal" style="color:#97282D;">Terms & Services</a></font>
            <br><br>
            <%= f.submit "Sign up", class:'blue reg_btn register_btn' %>
            <br><br>

          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="registered_confirmation" style="padding:100px 20px; text-align:center; color:#333; font-family:'webly_bld'; font-size:17px; display:none;">
        </div>
      </div>
    </div>


  </div>
</div>

<!-- <div style="height:300px;"></div> -->


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="myModalLabel">Terms of Use ("Terms")</h2>
      </div>
      <div class="modal-body">
        <%= render './termsandservices/termsandservices'+termsVersion %>
      </div>
      <div class="modal-footer">
        <button type="button" class="small_btn red disagreeTerms" data-dismiss="modal">I Disagree</button>
        <button type="button" class="small_btn green_sft agreeTerms" data-dismiss="modal">I Agree</button>
      </div>
    </div>
  </div>
</div>
