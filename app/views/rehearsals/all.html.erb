<div class="rehearsals_title">
  You have <span class="num"><%= rehearsals_notif %></span> submissions without feedback.
</div>

<hr>

<button class="tab selected" data-frame='new_rehearsals' data-group='top'>New Rehearsals</button>
<button class="tab" data-frame='all_rehearsals' data-group='top'>All Rehearsals</button>

<div class="box_sep">
  <div class="lesson_half"></div>
  <div class="all_content js-new_rehearsals_content">
    <div class="title">New Rehearsals</div>
    <% @rehearsals_without_feedback.each do |rehearsal| %>
        <% if (rehearsal.approval_status == nil || rehearsal.approval_status == 0) && User.exists?(rehearsal.trainee_id) %>
          <% lesson = rehearsal.lesson %>
          <% @r = 'rehearsal_bubble_'+rehearsal.id.to_s %>
          <% @date_sub = time_diff(Time.now, rehearsal.updated_at) %>


          <button class="user_bubble shadebox_btn rehearsal_activate <%= @r %>" data-rehearsalid='<%= rehearsal.id %>' data-coursetitle='<%= rehearsal.lesson.topic.course.title %>' data-topictitle='<%= rehearsal.lesson.topic.title %>' data-lessontitle='<%= rehearsal.lesson.title %>' >
            <img src="<%= student_pic(rehearsal.trainee) %>"  class="img-circle">
            <div class="info"><%= rehearsal.trainee.first_name+' '+ rehearsal.trainee.last_name %><br>
              <font size="0.2em">Submitted: <%= @date_sub %></font></div>
          </button>
        <% end %>
    <% end %>
  </div>


  <div class="all_content js-all_rehearsals_content" style="display:none;">
    <div class="title">All Course Rehearsals</div>
    <% @course_rehearsals.each do |rehearsal| %>
      <% if User.exists?(rehearsal.trainee_id) %>

        <% @r = 'rehearsal_bubble_'+rehearsal.id.to_s %>
        <% @date_sub = time_diff(Time.now, rehearsal.created_at) %>

        <button class="user_bubble shadebox_btn rehearsal_activate <%= @r %>" data-rehearsalid='<%= rehearsal.id %>' data-coursetitle='<%= rehearsal.lesson.topic.course.title %>' data-topictitle='<%= rehearsal.lesson.topic.title %>' data-lessontitle='<%= rehearsal.lesson.title %>' >
          <img src="<%= student_pic(rehearsal.trainee) %>"  class="img-circle">
          <div class="info"><%= rehearsal.trainee.first_name+' '+ rehearsal.trainee.last_name %><br>
            <font size="0.2em">Submitted: <%= @date_sub %></font></div>
        </button>
      <% end %>
    <% end %>
  </div>


  <div class="shadebox">
        <div class="shade box">
             <div class="shadebox_title">
                <div class="put_title_here"></div>
            </div>
            <div class="shadebox_content" style="text-align:center;">
                <div class="put_video_here"></div>
                <hr>
            </div>
            <div class="shadebox_bottom">
                <button type="button" class="mark_as_completed green_sft" style="float:left;" data-rehearsalid="" data-userid="<%= current_user.id %>">Mark as completed</button>
                <a href="" class="leave_feedback">
                  <button type="button" class="blue leave_feedback" style="float:left;" data-rehearsalid=" ">Leave Video Feedback</button>
                </a>
            </div>
        </div>
    </div>

</div>

