  <%= form_for [@course, @topic] do |f| %>
    <% if @topic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
        <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.text_field :title, placeholder:'Title' %><br>
    <%= f.text_area :description, placeholder:'Description' %><br>
    <%= f.text_field :tags, placeholder:'tags (comma separated)' %><br>
    <%= f.select :privacy, (@privacy) %>
    <%= f.select :language, (@languages) %><br><br>
    <%= button_tag 'Save Topic', type:'submit', class:"blue" %>
    <button class="red js-click_back">Cancel</button>

    <%= f.text_field :status, type:"hidden", value: 0 %><br>
    <%= f.text_field :course_id, type:"hidden", value:params[:id] %><br>
    <%= f.text_field :instructor_id, type:"hidden", value:current_user.id %><br>

  <%end%>
