<div class="top_info">
  <div class="course_title">
    <span class="grey"><%= @course.title %> ::</span>
  </div>
  <div class="course_title">
    <%= @topic.title %>
  </div>
</div>


<p>
  <strong>
    <%= @topic.title %> (Topic) <font color="#ccc">|</font> <%= link_to 'Edit', edit_course_topic_path %>
  </strong>
</p>

<p>
  <%= @topic.description %>
</p>


<h4>Lessons</h4>


<% @lessons.each_with_index do |lesson, index| %>
  <%= (index + 1).to_s %> - <%= link_to lesson.title, course_topic_lesson_path(@course, @topic, lesson) %>
  <% if current_user.level_2 %>
    <%= link_to 'Delete', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class:'red_text' %>
  <% end %>
  <br>
  <br>
<% end %>


<hr>

<%if current_user.level_2 %>
<!-- refactor @course from @course.id -->
  <a href="<%= new_course_topic_lesson_path(@course, @topic) %>">
    <button class="reg_btn blue">Create New Lesson</button>
  </a>
  <button class="reg_btn green_sft">Add External Lesson</button>
  <hr>
<% end %>


<a href="<%= course_path(@course) %>"><button> < Back to Topics </button></a>
