


<table>
  <thead>
  <tr>
    <th>Course</th>
    <th>User</th>
    <th>User role</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @courses_users_register_to.each do |cr| %>
        <% @course = cr.course %>
        <% @course_registrations = cr %>
         <tr>
            <td><%= cr.user.first_name %> <%= cr.user.last_name %></td>
            <td><%= cr.course.title.capitalize %></td>

            <%= form_for [@course, @course_registrations] do |f| %>
                <%= f.text_field :approval_status, type:"hidden", value: true %>
                <td><%= f.submit 'Accept Registration', class:'small_btn green_sft' %></td>
            <% end %>

            <td><%= button_to('Reject Registration', [@course, @course_registrations], remote: true, :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'small_btn delete_registration') %></td>
         </tr>
    <% end %>
  </tbody>
</table>
<script type="text/javascript" charset="utf-8">
  $('')
</script>