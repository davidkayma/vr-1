	<header class="inter_header">
		<a href="/"><img src="/assets/logo_white.png" width="30px" style="margin:10px 10px 0;"></a>
      	<!-- <div > -->
      		<%= link_to "Log out", destroy_user_session_path, method: "delete", class:"right_item" %>
