</head>
<body>

<div class="loading_app" style="display:none;">
  <span class="load_text">loading ... <span class="ion-ios-cloud-download"></span></span><br>
  <progress class="loading_prog" value="0" max="101"></progress>
</div>
<script type="text/javascript">$('.loading_app').show(); startLoadingProg();</script>



<% flash.each do |message_type, message| %>
  <div id:"flash" class="notice flash_message flash-<%= message_type %>">
    <%= message  %><div class="close_notice"> X </div>
  </div>
<% end %>

<%= render 'layouts/menu' unless request.original_fullpath == '/' && !current_user %>


<% if user_signed_in? %>

  <div class="inter_wrapper">
    <table style="height: 100%;" width="100%" border="0" cellspacing="0" cellpadding="0">
      <tbody>
        <tr>
          <td class="leftpanel" valign="top">
            <%= render 'layouts/leftpanel' %>
          </td>
          <td class="inter_content" valign="top">
              <%= render 'layouts/banner' %>
              <div class="body">
                <%= yield %>
                <input type="hidden" name="thisPath" value="<%= request.original_fullpath %>">
              </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

<% else %>

  <%= yield %>

<% end %>


