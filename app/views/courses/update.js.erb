'use strict';

$('.course_card_<%= @course.id %>').each(function(){
    let card = $(this);
    card.find("#ct_<%= @course.id %>").text('<%= @course.title %>');
    card.find("#ct_<%= @course.id %>").css('background-color', '<%= @course.color %>');
    card.find("#cd_<%= @course.id %>").text('<%= @course.description %>');
    card.find("#cc_<%= @course.id %>").text('<%= @course.access_code %>');
})
