
<h1>Listing Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Topic</th>
      <th>Lesson title</th>
      <th>Explanation</th>
      <th>Prompt</th>
      <th>Role model</th>
      <th>Performance</th>
      <th>Explanation script</th>
      <th>Prompt script</th>
      <th>Model script</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.course %></td>
        <td><%= lesson.lesson_title %></td>
        <td><%= lesson.explanation %></td>
        <td><%= lesson.prompt %></td>
        <td><%= lesson.role_model %></td>
        <td><%= lesson.performance %></td>
        <td><%= lesson.explanation_script %></td>
        <td><%= lesson.prompt_script %></td>
        <td><%= lesson.model_script %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "admin" %>
  <%= link_to 'New Lesson', new_topic_lesson_path %>
<% else %>
<% end %>
