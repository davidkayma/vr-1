<%= form_for [@course, @topic, @lesson] do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :title, class:'course_create', placeholder:'Title' %><br>
  <%= f.text_area :description, placeholder:'Description' %><br>
  Lesson type: <br> <%= f.select :lesson_type, (@lesson_type) %><br>
  <%= f.text_field :tags, class:'course_create', placeholder:'tags (comma separated)' %><br>
  <%= f.text_field :status, type:"hidden", value: 0 %><br>
  <%= f.select :privacy, (@privacy) %>
  <%= f.select :language, (@languages) %><br>
  <%= f.text_field :topic_id, type:"hidden", value:params[:topic_id] %><br>
  <%= f.text_field :instructor_id, type:"hidden", value:current_user.id %><br>

  
  <%= f.submit 'Save Lesson', class:'blue' %>
  <button class="red js-click_back">Cancel</button>
<% end %>
