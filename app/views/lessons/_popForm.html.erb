<% editMode = false if !editMode %>
<% editMode == 'quick' ? quickEdit = true : quickEdit = false %>

<div class="shadebox_bg" data-name="<%= editMode ? 'edit_lesson_form' : 'lesson_form' %>">
  
  <div class="shadebox">
    
    <div class="shadebox_header">
      <h5> <%= editMode ? lesson.title : 'Create a New Lesson' %> </h5>
    </div>
    
    <div class="shadebox_content">
      <%= render './lessons/form', lesson:lesson, editMode: editMode, quickEdit: quickEdit %>  
    </div>

    <div class="shadebox_footer">
      <div class="content">
        
      </div>
      <div class="shade_close ion-ios-close"></div>
    </div>

    </div>
</div>

<script>

  $(document).on('input', '#lesson_title', function(){
    let header = $(this).closest('.shadebox').find('.shadebox_header h5');

    if($(this).val().length === 0 && $('.shadebox_bg').data('name') === 'lesson_form' ){
      header.text( 'Create new lesson' );
    }else{
      header.text( $(this).val() );
    }
  });

  $(document).on('submit', 'form.edit_lesson', function(){
    let sb = $(this).closest('.shadebox_bg');
    sb.removeClass('open');
  });
</script>